      "request": "launch",
      "command": "./scripts/codespaces-setup.sh",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Deploy Ollama (Codespaces)",
      "type": "node-terminal",
      "request": "launch",
      "command": "./scripts/codespaces-start.sh",
